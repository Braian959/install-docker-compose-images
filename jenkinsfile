#!groovy
// Check ub1 properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { 
        label 'master'
        }
    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("First Step") {
            steps {sh 'ssh root@192.168.127.135 \'hostname\''}
        }
        stage("Second Step"){
            steps {sh 'ssh root@192.168.127.135 \'uptime\''}
        }
    }
}
